<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PreAssessmentFragment">
    <TextView
        android:id="@+id/questionText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        style="@style/pre_assessment_text_style_question"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/characterToPronounceCard"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardCornerRadius="16dp"

        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/lavender_indigo"
        android:outlineAmbientShadowColor="@color/lavender_indigo"
        android:outlineSpotShadowColor="@color/lavender_indigo"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="100dp"

        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/card_layout_background_initial"

            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/characterToPronounceText"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                style="@style/missing_character_choices_style"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/speakingButton"

        android:layout_width="wrap_content"
        android:layout_height="50dp"

        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/chinese_silver"
        android:outlineAmbientShadowColor="@color/chinese_silver"
        android:outlineSpotShadowColor="@color/chinese_silver"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="100dp"

        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/card_layout_background_initial"

            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/pre_assessment_click_to_hear_pronunciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/pre_assessment_click_to_hear_pronunciation_string"
                style="@style/pre_assessment_click_to_hear_pronunciation_string_style"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:paddingHorizontal="25dp"
                android:paddingVertical="2dp">
            </TextView>
            <ImageView
                android:id="@+id/speakingIcon"

                android:layout_width="16dp"
                android:layout_height="16dp"

                android:src="@drawable/speaking_icon"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/pre_assessment_click_to_hear_pronunciation"

                android:layout_marginRight="5dp"

                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choiceOne"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        style="@style/pre_assessment_text_style_choices"

        android:paddingHorizontal="26dp"

        android:background="@drawable/button_choices_background"

        app:layout_constraintBottom_toTopOf="@id/choiceTwo"

        android:layout_marginBottom="24dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choiceTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        style="@style/pre_assessment_text_style_choices"

        android:paddingHorizontal="26dp"

        android:background="@drawable/button_choices_background"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginBottom="50dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choiceThree"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        style="@style/pre_assessment_text_style_choices"

        android:paddingHorizontal="26dp"

        android:background="@drawable/button_choices_background"

        app:layout_constraintTop_toBottomOf="@id/choiceTwo"

        android:layout_marginTop="24dp"/>
    <ImageButton
        android:id="@+id/microphone_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/microphone_icon"
        android:background="@null"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="100dp"

        android:visibility="invisible"/>
    <ProgressBar
        android:id="@+id/loading_animation"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="?android:attr/progressBarStyle"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="100dp"

        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/check_icon"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/check_svgrepo_com"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="100dp"

        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>