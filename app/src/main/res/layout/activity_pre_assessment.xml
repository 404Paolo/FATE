<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreAssessmentActivity"

    android:orientation="vertical"
    android:background="@color/ghost_white">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"

        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pre_assessment_bottom_container"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="125dp">

        <Button
            android:id="@+id/button_next"

            style="@style/bottom_control_text_style"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:backgroundTint="@color/zaffre"

            android:text="@string/bottom_control_next"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>